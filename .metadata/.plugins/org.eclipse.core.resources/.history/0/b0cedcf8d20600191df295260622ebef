package Notas;
import java.util.Scanner;
public class Notas {

    public static void main (String[] args) {
 
    Scanner in = new Scanner (System.in);
	
	String [] ArrNome  = new String [3]; 
	int [] ArrIdade = new int[3];
       
	 for (int i=0; i < ArrIdade.length; i++){

	   System.out.println("Digite seu nome: ");
	   ArrNome [i] = in.nextLine();
	   System.out.println("Digite sua idade: ");
	   ArrIdade [i] = in.nextInt();

	 }

	for (int j=0; j < 3;j++){
	    System.out.println("Nome: "+ ArrNome[j]);
	    System.out.println("Idade: "+ArrIdade[j]);
	}
}
}
		